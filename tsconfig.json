{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["vitest/globals"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": [
    "node_modules",
    "eslint.config.mjs",
    ".prettierrc",
    "vitest.config.ts"
  ]
}
